<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demkobibl.AddGenreWindow"
        Title="AddGenreWindow">
    <StackPanel Orientation="Vertical" Spacing="15" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox Watermark="Название жанра" Width="350" Height="65" x:Name="GenreTitleTextBox" VerticalContentAlignment="Center"/>
        <Button Width="350" Height="30" x:Name="SaveGenreButton" Content="Сохранить" Click="SaveGenreButton_OnClick" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
