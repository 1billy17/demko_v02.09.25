<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demkobibl.ReturnBookWindow"
        x:CompileBindings="False"
        Title="ReturnBookWindow">
    <Border>
        <ListBox x:Name="BooksCopiesClientsListBox" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding ClientEmail}"/>
                        <TextBlock Text="{Binding BookCopyCode}"/>
                        <TextBlock Text="{Binding IssueDate, StringFormat=yyyy-MM-dd}"/>
                        <TextBlock Text="{Binding EndDate, StringFormat=yyyy-MM-dd}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Забрать книгу" Click="ReturnBookCopy_OnClick"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </Border>
</Window>
