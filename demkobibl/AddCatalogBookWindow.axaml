<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demkobibl.AddCatalogBookWindow"
        Title="AddCatalogBookWindow">
    <Grid ColumnDefinitions="1*, 1*" Margin="20">
        <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="10" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
            <TextBox Watermark="Название книги" Width="300" Height="55" x:Name="TitleTextBox" VerticalContentAlignment="Center"/>
            <TextBox Watermark="Год создания" Width="300" Height="55" x:Name="PublishYearTextBox" VerticalContentAlignment="Center"/>
            <ComboBox Width="300" Height="55" x:Name="AuthorComboBox"/>
            <Button Width="300" Height="30" x:Name="AddAuthorButton" Content="Добавить автора" Click="AddAuthorButton_OnClick" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <ComboBox Width="300" Height="55" x:Name="PublisherComboBox"/>
            <Button Width="300" Height="30" x:Name="AddPublisherButton" Content="Добавить издательство" Click="AddPublisherButton_OnClick" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <ListBox Width="300" Height="150" x:Name="GenresListBox" SelectionMode="Multiple"/>
            <Button Width="300" Height="30" x:Name="AddGenreButton" Content="Добавить жанр" Click="AddGenreButton_OnClick" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox Watermark="Количество страниц" Width="300" Height="55" x:Name="PagesTextBox" VerticalContentAlignment="Center"/>
            <TextBox Watermark="Описание книги" Width="300" Height="55" x:Name="DescriptionTextBox" VerticalContentAlignment="Center"/>
            <Button Width="300" Height="30" x:Name="SaveBookButton" Content="Сохранить" Click="SaveBookButton_OnClick" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="10" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
            <Image Width="350" Height="660" x:Name="BookImage"/>
            <Button Width="300" Height="30" x:Name="SelectImageButton" Click="SelectImageButton_OnClick" Content="Выбрать фото" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
